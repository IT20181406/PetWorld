<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idRLBSheet1"
    android:background="@color/blue_shade_1">



    <TextView
        android:id="@+id/idTVBrandName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Brand Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/idIVBrand"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idTVBrandName"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/idTVFoodType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVBrandName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVBrand"
        android:padding="3dp"
        android:text="Food Type"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/idTVsellerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVFoodType"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVBrand"
        android:padding="3dp"
        android:text="Seller Name"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/idTVPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVsellerName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVBrand"
        android:padding="3dp"
        android:text="Price"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/idTVWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVPrice"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVBrand"
        android:padding="3dp"
        android:text="Weight"
        android:textStyle="bold"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/idTVContactNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVWeight"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVBrand"
        android:padding="3dp"
        android:text="Contact Number"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/idTVDescription1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVContactNumber"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVBrand"
        android:padding="3dp"
        android:text="Description"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/idTVDescription1" >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Edit Pet Food"
            android:textColor="@color/white"
            android:id="@+id/idBtnEdit1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="View Details"
            android:textColor="@color/white"
            android:id="@+id/idBtnViewDetails1" />

    </LinearLayout>

</RelativeLayout>