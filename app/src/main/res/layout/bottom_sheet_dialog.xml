<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idRLBSheet"
    android:background="@color/blue_shade_1" >

    <TextView
        android:id="@+id/idTVCenterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Center Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/idIVCenter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idTVCenterName"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/idTVDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVCenterName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVCenter"
        android:padding="3dp"
        android:text="Description"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/idTVFor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVDescription"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVCenter"
        android:padding="3dp"
        android:text="For"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/idTVFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVFor"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVCenter"
        android:padding="3dp"
        android:text="Fee"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="2"
          android:layout_below="@id/idIVCenter" >

          <Button
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_margin="4dp"
              android:text="Edit Center"
              android:textColor="@color/white"
              android:id="@+id/idBtnEdit" />

          <Button
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_margin="4dp"
              android:text="View Details"
              android:textColor="@color/white"
              android:id="@+id/idBtnViewDetails" />

      </LinearLayout>


</RelativeLayout>