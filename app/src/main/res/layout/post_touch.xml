<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_relativeLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/paws"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/id_tv_categoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:text="Category Name"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_tv_breed"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_categoryName"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Breed"
        android:textColor="@color/purple_200"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_tv_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_breed"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Approximate Budget"
        android:textColor="@color/purple_200"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/id_tv_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_budget"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Quantity"
        android:textColor="@color/purple_200"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_tv_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_qty"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Category"
        android:textColor="@color/purple_200"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_tv_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_cat"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Contact No"
        android:textColor="@color/purple_200"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_tv_rem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_con"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Remarks"
        android:textColor="@color/purple_200"
        android:textSize="15sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tv_rem"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/id_btn_edit"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:text="Edit request"
            android:textColor="@color/white"
            app:backgroundTint="#9C27B0" />


    </LinearLayout>


</RelativeLayout>